<div id="<%= dom_id reminder %>" class="w-full sm:w-auto my-5 space-y-5">
	<div class='bg-white dark:bg-gray-800 text-gray-800 dark:text-white border border-gray-300 dark:border-gray-900 shadow rounded-md p-4'>
    <div class="mt-3">
      <h1 class="text-2xl">
      	<span class="font-bold">Title: </span>
      	<span><%= @reminder.title %></span>
      </h1>
    </div>
    <div class="mt-4">
			<span class="font-bold">Type: </span>
    	<span><%= @reminder.type.display_name %></span>
    </div>
    <div class="mt-4">
			<span class="font-bold">Logged To: </span>
    	<span><%= link_to @reminder.logged_to.name, @reminder.logged_to %></span>
    </div>
    <div class="mt-4">
			<span class="font-bold">Account: </span>
    	<span><%= link_to @reminder.account.name, @reminder.account %></span>
    </div>
   
    <% if @reminder.people.any? %>
    	<div class="mt-4">
    		<span class="font-bold">People:</span>
		    <% @reminder.people.each do |person| %>
          <div>
		    	 <span><%= link_to person.full_name, person %></span>
          </div>
		    <% end %>
	   </div>
		<% end %>  

    <div class="mt-4">
			<span class="font-bold">Occurring At: </span>
    	<span><%= @reminder.occurring_at.to_formatted_s(:rfc822) %></span>
    </div>
    <div class="mt-4">
			<span class="font-bold">Notes: </span>
    	<span><%= @reminder.notes %></span>
    </div>
    <div class="mt-4">
			<span class="font-bold">Assigned To: </span>
    	<span><%= link_to_user @reminder.assigned_to %></span>
    </div>        
	</div>
</div>
