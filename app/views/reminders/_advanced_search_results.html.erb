<div class="overflow-x-auto sm:rounded-lg mt-10">
  <table class="text-sm text-left text-gray-500">
    <thead class="text-xs text-gray-800 dark:text-white uppercase bg-gray-50 dark:bg-gray-700 whitespace-nowrap">
      <th scope="col" class="px-6 py-3">Title</th>
      <th scope="col" class="px-6 py-3">Logged To</th>
      <th scope="col" class="px-6 py-3">Account</th>
      <th scope="col" class="px-6 py-3">Assigned To</th>
      <th scope="col" class="px-6 py-3">Type</th>
      <th scope="col" class="px-6 py-3">Occurring At</th>
    </thead>
    <tbody>
      <% @builder.results.each do |reminder| %>
        <tr class="bg-white hover:bg-gray-50 dark:bg-gray-500 dark:hover:bg-gray-400 text-gray-800 dark:text-white border-b border-gray-300 dark:border-gray-600">
          <th scope="row" class="px-6 py-4 font-medium whitespace-nowrap">
            <%= link_to reminder.title, reminder, data: { turbo: false } %>
          </th>
          <td class="px-6 py-4">
            <%= link_to reminder.logged_to.name, reminder.logged_to, data: { turbo: false } %>
          </td>
          <td class="px-6 py-4">
            <%= link_to reminder.account.name, reminder.account, data: { turbo: false } %>
          </td>
          <td class="px-6 py-4">
            <%= link_to_user(reminder.assigned_to, data: { turbo: false }) %>
          </td>
          <td class="px-6 py-4">
            <%= reminder.type&.display_name %>
          </td>
          <td class="px-6 py-4">
            <%= reminder.occurring_at %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
