<span class='text-2xl font-poppins'>Change Over Time Settings</span>
<div id="sal-settings-options">
  <div class="py-4">
    <%= label_tag 'group-by-select', "Rows", class: 'block mb-2 font-medium text-gray-800 dark:text-white' %>
    <%= change_over_time_rows_tag class: sal_form_select_tag_html_classes %>
  </div>

  <% [:period_1, :period_2].each_with_index do |period, idx| %>
    <div class="py-4">
      <%= label_tag period, period.to_s.titleize, class: "block mb-2 font-medium text-gray-800 dark:text-white" %>
      <%= select_tag period, options_for_select(@builder.config.periods, selected: @builder.existing_value(period)), include_blank: true, class: sal_form_select_tag_html_classes %>
    </div>
  <% end %>
</div>
